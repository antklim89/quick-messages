generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profile {
  id        String   @id @default(uuid()) @db.Uuid
  name      String   @default("anon") @db.VarChar(255)
  bio       String   @default("")
  avatarUrl String?  @db.VarChar(255)
  createdAt DateTime @default(now())

  messages  Message[]
  likes     Like[]
  favorites Favorite[]

  @@map("profiles")
}

model Subject {
  body      String   @id @db.VarChar(255)
  createdAt DateTime @default(now())

  messages Message[]

  @@map("subjects")
}

model Report {
  id        Int      @id @default(autoincrement())
  body      String   @db.VarChar(255)
  createdAt DateTime @default(now())

  message   Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
  messageId Int

  @@map("reports")
}

model Message {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  body      String

  author   Profile @relation(fields: [authorId], references: [id], onDelete: Cascade)
  authorId String  @db.Uuid

  answerTo   Message?  @relation(name: "messages", fields: [answerToId], references: [id], onDelete: SetNull)
  answerToId Int?
  answers    Message[] @relation(name: "messages")

  subject     Subject @relation(fields: [subjectBody], references: [body])
  subjectBody String  @db.VarChar(255)

  likes     Like[]
  favorites Favorite[]
  reports   Report[]

  @@map("messages")
}

model Like {
  user   Profile @relation(fields: [userId], references: [id], onDelete: NoAction)
  userId String  @db.Uuid

  message   Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
  messageId Int

  @@unique([messageId, userId])
  @@index([messageId, userId])
  @@map("likes")
}

model Favorite {
  user   Profile @relation(fields: [userId], references: [id], onDelete: NoAction)
  userId String  @db.Uuid

  message   Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
  messageId Int

  @@unique([messageId, userId])
  @@index([messageId, userId])
  @@map("favorites")
}
