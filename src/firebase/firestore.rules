rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /messages/{messageId} {
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.author;
      allow create: if request.resource.data.author != null && request.resource.data.author == /databases/(default)/documents/users/$(request.auth.uid);
      allow read;
    }
  }
}